<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.bank.mapper.IUserDao">

    <select id="getInformation" resultType="User" parameterType="String">
        SELECT * FROM user WHERE telephone = #{telephone}
    </select>
    
    <insert id="createUser" parameterType="User" >
        INSERT INTO user(name,password,email,telephone,Authority) VALUES (#{name},#{password},#{email},#{telephone},#{Authority})
    </insert>

    <update id="updateInformation" parameterType="User">
        UPDATE user set name=#{name},password=#{password},email=#{email},Authority=#{Authority} WHERE telephone=#{telephone}
    </update>
</mapper>